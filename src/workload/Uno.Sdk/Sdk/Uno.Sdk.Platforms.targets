<Project>

  <PropertyGroup>
    <_DefaultTargetPlatformVersion>1.0</_DefaultTargetPlatformVersion>
  </PropertyGroup>

  <PropertyGroup>
    <TargetPlatformSupported>true</TargetPlatformSupported>
    <TargetPlatformVersion Condition=" '$(TargetPlatformVersion)' == '' and ($(TargetFramework.EndsWith('skia')) or $(TargetFramework.EndsWith('webassembly')))">$(_DefaultTargetPlatformVersion)</TargetPlatformVersion>
    <_TargetFramework Condition="$(TargetFramework.EndsWith('skia'))">$(TargetFramework)$(_DefaultTargetPlatformVersion)</_TargetFramework>
    <_TargetFramework Condition="!$(TargetFramework.EndsWith('skia'))">$(TargetFramework)</_TargetFramework>
    <_TargetFramework Condition="$(TargetFramework.EndsWith('webassembly'))">$(TargetFramework)$(_DefaultTargetPlatformVersion)</_TargetFramework>
    <_TargetFramework Condition="!$(TargetFramework.EndsWith('webassembly'))">$(TargetFramework)</_TargetFramework>
  </PropertyGroup>

  <ItemGroup>
    <SupportedPlatform Include="skia" />
    <SupportedPlatform Include="webassembly" />
  </ItemGroup>

  <ItemGroup Condition="$(TargetFramework.EndsWith('skia')) or $(TargetFramework.EndsWith('webassembly'))">
    <UnoSdkSupportedTargetPlatformVersion Include="1.0" />
  </ItemGroup>

  <ItemGroup Condition="$(TargetFramework.EndsWith('skia')) or $(TargetFramework.EndsWith('webassembly'))">
    <SdkSupportedTargetPlatformVersion Include="@(UnoSdkSupportedTargetPlatformVersion)" />
  </ItemGroup>

  <ItemGroup Condition=" '$(TargetFrameworkIdentifier)' == '.NETCoreApp' and $([MSBuild]::VersionGreaterThanOrEquals($(TargetFrameworkVersion), '6.0')) ">
    <SdkSupportedTargetPlatformIdentifier Include="skia" DisplayName="Skia" />
    <SdkSupportedTargetPlatformIdentifier Include="webassembly" DisplayName="WebAssembly" />
  </ItemGroup>

</Project>
